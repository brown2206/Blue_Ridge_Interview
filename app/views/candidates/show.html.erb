<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>FIRST NAME</th>
      <th>LAST NAME</th>
      <th>EMAIL</th>
      <th>GENDER</th>
      <th>IP ADDRESS</th>
      <th>DATE OF BIRTH</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @candidate.id %></td>
        <td><%= @candidate.first_name %></td>
        <td><%= @candidate.last_name %></td>
        <td><%= @candidate.email %></td>
        <td><%= @candidate.gender %></td>
        <td><%= @candidate.ip_address %></td>
        <td><%= @candidate.date_of_birth %></td>
      </tr>
  </tbody>
</table>
<%= link_to "Edit Candidate", edit_candidate_path(@candidate) %>
<%= link_to "Delete Candidate", candidate_path(@candidate), method: :delete %>

